{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS", // ou "ESNext" se estiver usando "type": "module"
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true
  }
}
